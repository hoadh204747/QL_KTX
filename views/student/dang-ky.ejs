<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<main>
    <div class="xx">
        <div>
            <h1>Danh sách phòng</h1>
        </div>
    </div>

    <div class="table-room">
        <table style="width: 100%;">
            <tr>
                <th>Phòng</th>
                <th>Giá</th>
                <th>Giới tính</th>
                <th>Hiện có</th>
                <th>Max</th>
                <th>Tình trạng</th>
                <th></th>
            </tr>
            <% rooms.forEach(function(room) { %>
                <tr>
                    <td><%= room.name %></td>
                    <td><%= room.price %>k</td>
                    <td><%= room.gender %></td>
                    <td></td>
                    <td><%= room.countMax %></td>
                    <td></td>
                    <td>Đăng ký</td>
                </tr>
            <% }) %>
        </table>
    </div>
</main>
 
