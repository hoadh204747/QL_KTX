<%- include('../partials/header.ejs') %>

<div class="wrapper-dashboard">
    <%- include('../partials/nav-admin.ejs') %>
    <div class="main">
        <%- include('../partials/x-admin.ejs') %>

        <main class="content px-3 py-2">
            <!-- <div class="container-fluid"></div> -->
            <h1>Chỉnh sửa bài đăng</h1>

            <form action="/edit-news/<%= news._id %>?_method=PUT" method="POST">

                <label for="title"><b>Tiêu đề</b></label>
                <br>
                <input style="width: 90%; margin: 10px 40px;" type="text" placeholder="Nhập tiêu đề" name="title" value="<%= news.title %>">
                <br>
                <label for="content"><b>Nội dung</b></label>
                <textarea id="content" name="content" cols="50" rows="10"><%= news.content %></textarea>
            
                <button type="submit">Cập nhật</button>
            
            </form>
        </main>
    </div>
</div>


<%- include('../partials/footer.ejs') %>